//add category to posts:
add_action( 'init', function()
{
	
    $ids = array(113,140,178,209,256,279,400,444,452,463,478,492,653,716,724,902,970,1099,1169,1239,1482,1649,2219,2308,2569,2689,2706,2958,2965,2971,3277,3454,3462,3830,3895,3929,3937,4125,4144,4150,4307,4566,5228,5339,5598,6430,6758,7263,7541,7548,7898,8077,8784,8862,9163,9173,9239,9321,9361,9370,9482,9831,10442,10523,12143,12269,12442,13903,13974);


    foreach ( $ids as $id ) {
        wp_set_post_categories(
            $id, // Post ID
            670, // Term ID to add
            true
        );
	}
}, PHP_INT_MAX );
